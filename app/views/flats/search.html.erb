<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h1>Search Results 🏡</h1>
    </div>
    <div class="pull-right">
      <h2><%= @count %> Available</h2>
    </div>
  </div>

  <div class="row">
  <% @flats.each do |flat| %>
      <div class="col-xs-12 col-sm-4 mt-10">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= flat.image_url %>);">
          <div class="card-category">Flat</div>
          <div class="card-description">
            <h2><%= flat.name %></h2>
            <p>💶 <%= flat.price_per_night %> 👨‍👩‍👧‍👧 <%= flat.number_of_guests %></p>
          </div>
          <%= link_to '', flat_path(flat), class: 'card-link' %>
        </div>
      </div> 
  <% end %>
</div>
</div>